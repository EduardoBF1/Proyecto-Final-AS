        Button:
            id: btn1
            text: "Remo inclinado"
            size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.9}
            on_press: root.newbtn1()
        Button:
            id: btn2
            text: "Remo horizontal"
            size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.8}
            on_press: root.newbtn2()
        Button:
            id: btn3
            text: "Pullover con polea"
            size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.7}
            on_press: root.newbtn3()
        Button:
            text: "<-- Back"
            size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.0, "top" : 1}
            on_press:
